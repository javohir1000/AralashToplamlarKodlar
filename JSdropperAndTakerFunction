function dropper(str,num1,num2){
    res=''
    for(i=0;i<str.length;i++){
        if(i>=num1 && i<num2){
            continue
        }
        else{
            res+=str[i]
        }
    }
    return res
    
    
}
console.log(dropper('salom',0,2))

//output is : lom

function taker(str,num1,num2){
    result=''
    for(i=0;i<str.length;i++){
        if(i>=num1 && i<num2){
            result+=str[i]
        }
    }
    return result
    
    
}
console.log(taker('salomalekum',0,5))//salom
